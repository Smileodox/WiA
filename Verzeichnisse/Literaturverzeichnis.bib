@article{Boller2010,
  author    = {Boller, Ryan A. and Braun, Scott A. and Miles, Jadrian and Laidlaw, David H.},
  title     = {Application of Uncertainty Visualization Methods to Meteorological Trajectories},
  journal   = {Earth Science Informatics},
